//console.log(lowerthen)


//conditional ternary operators (boolean operators)

let hunger = true
let snack = hunger? "eat apple" : "drink water"

console.log('you should ${snack}')

//switch statements

let dayofweek = "sunday"
switch(dayofweek) {

    case "sumday":
        console.log("go to market")
        break

    case "monday":
        console.log("read a book")
        break
        
        default:
        console.log("make a typescript program")
}